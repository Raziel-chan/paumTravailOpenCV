<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paum.opencv.paumtravailopencv.TraitementImageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane prefHeight="1080.0" prefWidth="1920.0">
      <children>
         <ImageView fx:id="imageOriginale" fitHeight="1008.0" fitWidth="1880.0" layoutX="-7.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" />
         <MenuBar>
           <menus>
             <Menu mnemonicParsing="false" text="Fichier">
               <items>
                 <MenuItem mnemonicParsing="false" onAction="#menuItemOuvertureFichier" text="Ouverture fichier" />
               </items>
             </Menu>
             <Menu mnemonicParsing="false" onHidden="#choixTypeOperation" onShowing="#initialisationChoix" text="Opération traitement Image">
               <items>
                 <MenuItem mnemonicParsing="false" text="Type opération">
                        <graphic>
                           <ChoiceBox fx:id="typeOperation" prefWidth="150.0" />
                        </graphic></MenuItem>
               </items>
             </Menu>
           </menus>
         </MenuBar>
      </children>
   </Pane>
</VBox>
